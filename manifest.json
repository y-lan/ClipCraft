{
  "manifest_version": 3,
  "name": "ClipCraft",
  "description": "Clip webpage snippets, export Markdown, and leverage AI tools like summary & Qâ€‘A.",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "action": {
    "default_title": "Clip with ClipCraft",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/markdown-it.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["vendor/markdown-it.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 